<!DOCTYPE>
<html lang"ja">
 <head>
  <meta charset="UTF-8">
   <link rel="Stylesheet" href="top.scss">
   <title>BookersTop</title>
 <body>
  <div class="flash">
   <%= flash[:notice] %>
  </div>


 <h1>Books</h1>

 <table>
  <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
  </thead>

   <% @books.each do |book| %>
  <tbody>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
       <%= link_to "Show",book_path(book) %>
       <%= link_to "Edit",edit_book_path(book) %>
       <%= link_to "Destroy",update_book_path(book), method: :delete,"data-confirm" =>"Are you sure?"  %>
     </td>
    <tr>
  </tbody>
  <% end %>
 </table>

 <h2>New book</h2>

<% if @book.errors.any? %>
 <div id="errors_explanation">
 <%= pluralize(@book.errors.count,"error") %>  prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
 <% end %>
  </ul>
 </div>
<% end %>

 <%= form_with model:@book, url:"/books", local:true do |f| %>

 <label for = "book_title">Title</label>
 <%= f.text_field :title %>

 <label for = "Body_title">Body</label>
 <%= f.text_area :body %>
 <div class="text-bottom">
   <%= f.submit "Create Book" %>
 </div>

 <% end %>

 </body>
</html>
