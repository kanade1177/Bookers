<h1>Books</h1>

<table>

  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

 
  <% @books.each do |book| %>
  <tr>  
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to("Show","/books/#{book.id}") %>
      <%= link_to("Edit","/books/#{book.id}/edit") %>
      <%= link_to("Destroy") %>
    </td>
  <tr>  
  <% end %>
</table>

<h3>New book</h3>



