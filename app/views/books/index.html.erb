  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model:@book, url:"/books", local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>


<h4>Body</h4>
<%= f.text_area :body %>
<div class="text-bottom">
  <%= f.submit "Create Book" %>
</div>

<% end %>

